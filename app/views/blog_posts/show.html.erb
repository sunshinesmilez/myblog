<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
    <div class="panel-heading">
        <%=@blog_post.title %>
    </div>
    
    <div class="panel-body">
      <p> by <strong><%=@blog_post.author %></strong><span class="posted-at">posted at:<%= @blog_post.created_at.strftime('%m/%d/%Y at %I:%M%p') %></span><br></span></p>
      <p> <%= @blog_post.blog_entry %></p>
      
    </div>
</div>

<div class="panel panel-success">
    <div class="panel-heading">
      Make a comment
    </div>
    <div class="panel-body">
      
      <%=render 'comments/form' %>
    </div>
  
  
  <div class="panel panel-default">
    <div class="panel-heading">
        <h4> Comments</h4>
    </div>
    
    <% @blog_post.comments.each do|comment|%>
    <div class="panel-body">
      <p> <strong><%= comment.author %> </strong> said:</p>
      <p> <%= comment.comment_entry %></p>
      <p><spanclass="posted-at"><%=comment.created_at.strftime('%m/%d/%Y at %I:%M%p')%></span></p>
  </div>
  <% end%>
  
  
</div>

<%= link_to 'Edit', edit_blog_post_path(@blog_post) %> 
</div>


<%= link_to 'Back', blog_posts_path %>
